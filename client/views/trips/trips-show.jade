h3 {{trip.name}}

.row
  .col-xs-6
    #map
  .col-xs-6
    .row
      .col-xs-6
        form(name='stopForm', novalidate)
          .form-group
            label(for='name') Name
            input.form-control#name(type='text', name='name', ng-model='stop.name')
          .form-group
            button.btn.btn-default(type='submit', ng-click='create(stop)') Add Stop
      .col-xs-6
    .row
      .col-xs-6
        table.table.table-striped
          thead
            tr
              th
              th Name
              th Latitude
              th Longitude
          tbody
            tr(ng-repeat='stop in trip.stops')
              td: button.btn.btn-danger.btn-xs(ng-click='destroy(stop)') Delete
              td {{stop.name}}
              td {{stop.lat | number:4}}
              td {{stop.lng | number:4}}
      .col-xs-6
